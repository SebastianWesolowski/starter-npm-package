{
  "name": "PLACEHOLDER_REPO_NAME",
  "version": "0.0.0-development",
  "description": "A template for creating npm packages using TypeScript",
  "main": "./lib/index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "lint:info:start": "Lint-and-Check----------------------------------------------------------------------------------",
    "lint": "run-s format:check lint:parallel",
    "lint:parallel": "run-p lint:check style:check:strict",
    "lint:check": "eslint \"./src/**/*.+(js|jsx|ts|tsx)\"",
    "lint:check:strict": "cross-env NODE_ENV=strictRules npm run lint:check -- --report-unused-disable-directives",
    "lint:fix": "run-s format:fix \"lint:check -- --fix\" style:fix",
    "lint:fix:strict": "cross-env NODE_ENV=strictRules npm run lint:fix -- --report-unused-disable-directives",
    "style:check": "stylelint \"./src/**/*.+(css|scss|sass)\"",
    "style:check:strict": "cross-env NODE_ENV=strictRules npm run style:check --",
    "style:fix": "run-s \"style:check --fix\"",
    "prettier": "prettier --check \"**/*.{js,jsx,ts,tsx}\"",
    "prettier:fix": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
    "format:fix": "npm run format:check -- --write",
    "format:check": "prettier --check \"./**/*.+(js|jsx|ts|tsx|json)\" --ignore-unknown --ignore-path .gitignore",
    "format": "prettier --write \"**/*.{ts,js,tsx,md}\"",
    "lint:info:end": "Lint-End------------------------------------------------------------------------------------------",
    "build": "tsc --project tsconfig.build.json",
    "clean": "rm -rf ./lib/",
    "cm": "cz",
    "test:watch": "jest --watch",
    "test": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "inprogres:start": "--------------",
    "build:prod": "echo build:prod",
    "inprogres:end": "--------------",
    "GitHook:info:start": "GitHook--------------------------------------------------------------------------------------",
    "husky:prepare-commit-msg": "exec < /dev/tty && node_modules/.bin/git-cz --hook || true",
    "husky:pre-commit": "lint-staged -c ./.husky/lint-staged.config.json",
    "husky:pre-push": "run-s lint quality:check:* build:prod",
    "husky:commit-msg": "commitlint --edit $GIT_PARAMS",
    "quality:check:type": "echo quality:check:type",
    "staged:style:check": "stylelint \"*.+(css|scss|sass)\" --allow-empty-input",
    "staged:style:fix": "yarn style:check --fix",
    "staged:format:check": "npm run format:check",
    "staged:format:fix": "yarn format:fix",
    "staged:lint:check": "eslint --config .eslintrc.js",
    "staged:lint:fix": "yarn lint:check --fix",
    "prepare": "husky install",
    "GitHook:info:end": "GitHook-End----------------------------------------------------------------------------"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PLACEHOLDER_GITHUB_USER/PLACEHOLDER_REPO_NAME.git"
  },
  "license": "MIT",
  "author": {
    "name": "PLACEHOLDER_FULL_NAME",
    "email": "PLACEHOLDER_GITHUB_USER@users.noreply.github.com",
    "url": "https://github.com/PLACEHOLDER_GITHUB_USER"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "keywords": [
    "boilerplate",
    "template",
    "typescript",
    "vscode",
    "jest",
    "husky",
    "commitizen",
    "semantic-release",
    "codecov"
  ],
  "bugs": {
    "url": "https://github.com/PLACEHOLDER_GITHUB_USER/PLACEHOLDER_REPO_NAME/issues"
  },
  "homepage": "https://github.com/PLACEHOLDER_GITHUB_USER/PLACEHOLDER_REPO_NAME#readme",
  "devDependencies": {
    "@ryansonshine/commitizen": "^4.2.8",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^27.5.2",
    "@types/node": "^12.20.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.54.1",
    "commitizen": "^4.3.0",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-storybook": "^0.6.11",
    "eslint-plugin-tailwindcss": "^3.12.1",
    "git-cz": "^4.9.0",
    "husky": "^6.0.0",
    "jest": "^27.2.0",
    "lint-staged": "^13.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.4.0",
    "react": "^18",
    "react-dom": "^18",
    "sass": "^1.69.3",
    "semantic-release": "^21.0.1",
    "style-loader": "^3.3.3",
    "stylelint": "^15.10.3",
    "stylelint-config-rational-order-fix": "^0.1.9",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "stylelint-config-tailwindcss": "^0.0.7",
    "stylelint-no-unresolved-module": "^2.2.1",
    "stylelint-no-unsupported-browser-features": "^7.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "^5.2.1",
    "tailwindcss": "^3.3.3",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "5.2.2"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  }
}
